<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Patient Portal Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>


    </style>
</head>
<body>

    <!--New Nav Bar-->
    <nav style="padding-top: 0; top: 0; position:fixed; margin: 0; padding-right: 15px; padding-left: 15px; width: 100%; height: 100px;"
         class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="~/Home/Index">Vista <br />Healthcare Portal</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse" id="navbarColor02">
            <form style="right:-730px; position: relative" class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>

    </nav>

    <br />
    <br />

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <div  class="collapse navbar-collapse" id="navbarColor02">
            <ul style="margin:auto; width:auto; text-align:center; font-size:medium;"  class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Home/Index">Home</a>
                    <span class="sr-only">(current)</span>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Patient/Index">Patients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/About">About</a>
                </li>

            </ul>
        </div>
    </nav>


    <!--End of nav bar-->


    <div class="container">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>